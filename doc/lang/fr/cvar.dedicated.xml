<?xml version="1.0" encoding="UTF-8"?>
<refentry id="cvar.dedicated">
  <refmeta>
    <refentrytitle>dedicated</refentrytitle>

    <manvolnum>cvar</manvolnum>
  </refmeta>

  <refnamediv>
    <refname>dedicated</refname>

    <refpurpose>pour établir le mode serveur</refpurpose>
  </refnamediv>

  <refsynopsisdiv>
    <cmdsynopsis>
      <command>dedicated</command>

      <arg><replaceable>mode</replaceable></arg>
    </cmdsynopsis>

    <table frame="all" id="cvar.dedicated.modes">
      <?dbfo table-width="70%"?>

      <title>dedicated Modes</title>

      <tgroup align="left" cols="2" colsep="1" rowsep="1">
        <colspec align="center" colnum="1" colwidth="2*" />

        <colspec colnum="2" colwidth="9*" />

        <thead>
          <row>
            <entry>MODE</entry>

            <entry>DESCRIPTION</entry>
          </row>
        </thead>

        <tbody>
          <row>
            <entry>0</entry>

            <entry>hybride client/serveur</entry>
          </row>

          <row>
            <entry>1</entry>

            <entry>LAN seulement (ne pas publier sur les listes de
            serveurs)</entry>
          </row>

          <row>
            <entry>2</entry>

            <entry>Internet seulement (publier sur les listes de
            serveurs)</entry>
          </row>
        </tbody>
      </tgroup>
    </table>
  </refsynopsisdiv>

  <refsection>
    <title>Valeur initiale</title>

    <cmdsynopsis>
      <command>dedicated</command>

      <arg choice="plain"><literal>0</literal></arg>
    </cmdsynopsis>
  </refsection>

  <refsection>
    <title>Description</title>

    <para><command>dedicated</command> établit le mode serveur.</para>
  </refsection>

  <refsection>
    <title>Voir également</title>

    <para><xref linkend="cvar.sv_hostname" />, <xref
    linkend="cvar.server_motd0" />, <xref linkend="cvar.server_motd1" />,
    <xref linkend="cvar.server_motd2" />, <xref
    linkend="cvar.server_motd3" />, <xref linkend="cvar.server_motd4" />,
    <xref linkend="cvar.server_motd5" /></para>
  </refsection>
</refentry>