<refentry id="cvar.rconpassword">

<refmeta>
    <refentrytitle>rconpassword</refentrytitle>
    <manvolnum>cvar</manvolnum>
</refmeta>

<refnamediv>
    <refname>rconpassword</refname>
    <refpurpose>set password to enable remote console commands</refpurpose>
</refnamediv>

<refsynopsisdiv>
    <cmdsynopsis>
        <command>rconpassword</command>
        <arg><replaceable>"secret"</replaceable></arg>
    </cmdsynopsis>
</refsynopsisdiv>

<refsection>
<title>Default</title>
    <cmdsynopsis>
        <command>rconpassword</command>
        <arg choice="plain"><literal>""</literal></arg>
    </cmdsynopsis>
</refsection>

<refsection>
<title>Description</title>
<para>
    <command>rconpassword</command>
    sets the password required for remote console commands.
    An empty value <literal>""</literal> will disable remote console.
</para>
</refsection>

</refentry>
