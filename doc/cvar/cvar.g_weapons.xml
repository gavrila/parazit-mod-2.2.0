<tgroup cols="2" align="left" colsep="1" rowsep="1">
    <colspec colnum="1" colwidth="9*" align="center"/>
    <colspec colnum="2" colwidth="71*"/>
    <thead>
        <row>
            <entry>FLAG</entry>
            <entry>DESCRIPTION</entry>
        </row>
    </thead>
    <tbody>
        <row>
            <entry>1</entry>
            <entry>&fieldops; with level 0 battle-sense do not spawn with binoculars</entry>
        </row>
        <row>
            <entry>2</entry>
            <entry>syringes function underwater</entry>
        </row>
        <row>
            <entry>4</entry>
            <entry>pliers function underwater</entry>
        </row>
        <row>
            <entry>8</entry>
            <entry>"Too many air strikes requested" will restore used charge bar</entry>
        </row>
        <row>
            <entry>16</entry>
            <entry>"Too many air strikes requested" will restore half of used charge bar</entry>
        </row>
        <row>
            <entry>32</entry>
            <entry>ammo packs restore a lost helmet</entry>
        </row>
        <row>
            <entry>64</entry>
