<refentry id="cvar.g_weapons">

<refmeta>
    <refentrytitle>g_weapons</refentrytitle>
    <manvolnum>cvar</manvolnum>
</refmeta>

<refnamediv>
    <refname>g_weapons</refname>
    <refpurpose>set bitflags for various weapons behavior</refpurpose>
</refnamediv>

<refsynopsisdiv>
    <cmdsynopsis>
        <command>g_weapons</command>
        <arg><replaceable>flags</replaceable></arg>
    </cmdsynopsis>

<table id="cvar.g_weapons.flags" frame="all">
<?dbfo table-width="80%"?>
