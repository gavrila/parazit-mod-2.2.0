<refnamediv>
    <refname>g_vulnerableWeapons</refname>
    <refpurpose>set bitflags to enable missile-type weapon vulnerability</refpurpose>
</refnamediv>

<refsynopsisdiv>
    <cmdsynopsis>
        <command>g_vulnerableWeapons</command>
        <arg><replaceable>flags</replaceable></arg>
    </cmdsynopsis>

