<refentry id="cvar.g_gametype">

<refmeta>
    <refentrytitle>g_gametype</refentrytitle>
    <manvolnum>cvar</manvolnum>
</refmeta>

<refnamediv>
    <refname>g_gametype</refname>
    <refpurpose>set general mode of gameplay</refpurpose>
</refnamediv>

<refsynopsisdiv>
    <cmdsynopsis>
        <command>g_gametype</command>
        <arg><replaceable>mode</replaceable></arg>
    </cmdsynopsis>

<table id="cvar.g_gametype.modes" frame="all">
<?dbfo table-width="40%"?>
<title>g_gametype Modes</title> 
<tgroup cols="2" align="left" colsep="1" rowsep="1">
    <colspec colnum="1" colwidth="9*" align="center"/>
    <colspec colnum="2" colwidth="31*"/>
    <thead>
        <row>
            <entry>MODE</entry>
            <entry>DESCRIPTION</entry>
        </row>
    </thead>
    <tbody>
        <row>
            <entry>2</entry>
            <entry>objective</entry>
        </row>
        <row>
            <entry>3</entry>
            <entry>stopwatch</entry>
        </row>
        <row>
            <entry>4</entry>
            <entry>campaign</entry>
        </row>
        <row>
            <entry>5</entry>
            <entry>last-man-standing</entry>
        </row>
    </tbody>
</tgroup>
</table>
</refsynopsisdiv>

<refsection>
<title>Default</title>
    <cmdsynopsis>
        <command>g_gametype</command>
        <arg choice="plain"><literal>4</literal></arg>
    </cmdsynopsis>
</refsection>

<refsection>
<title>Description</title>
<para>
    <command>g_gametype</command>
    sets the general mode of gameplay.
</para>
</refsection>

