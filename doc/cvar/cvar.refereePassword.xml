<refentry id="cvar.refereePassword">

<refmeta>
    <refentrytitle>refereePassword</refentrytitle>
    <manvolnum>cvar</manvolnum>
</refmeta>

<refnamediv>
    <refname>refereePassword</refname>
    <refpurpose>set password for client referee promotion</refpurpose>
</refnamediv>

<refsynopsisdiv>
    <cmdsynopsis>
        <command>refereePassword</command>
        <arg><replaceable>"secret"</replaceable></arg>
    </cmdsynopsis>
</refsynopsisdiv>

<refsection>
<title>Default</title>
    <cmdsynopsis>
        <command>refereePassword</command>
        <arg choice="plain"><literal>""</literal></arg>
    </cmdsynopsis>
</refsection>

<refsection>
<title>Description</title>
<para>
    <command>refereePassword</command>
    sets the password required for clients to become match referees.
</para>
</refsection>

</refentry>
