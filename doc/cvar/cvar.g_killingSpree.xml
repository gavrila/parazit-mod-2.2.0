<refentry id="cvar.g_killingSpree">

<refmeta>
    <refentrytitle>g_killingSpree</refentrytitle>
    <manvolnum>cvar</manvolnum>
</refmeta>

<refnamediv>
    <refname>g_killingSpree</refname>
    <refpurpose>set killing spree mode</refpurpose>
</refnamediv>

<refsynopsisdiv>
    <cmdsynopsis>
        <command>g_killingSpree</command>
        <arg><replaceable>mode</replaceable></arg>
    </cmdsynopsis>

<table id="cvar.g_killingSpree.modes" frame="all">
<?dbfo table-width="75%"?>
<title>g_killingSpree Modes</title>
<tgroup cols="2" align="left" colsep="1" rowsep="1">
    <colspec colnum="1" colwidth="9*" align="center"/>
    <colspec colnum="2" colwidth="66*"/>
    <thead>
        <row>
            <entry>MODE</entry>
            <entry>DESCRIPTION</entry>
        </row>
    </thead>
    <tbody>
        <row>
            <entry>0</entry>
            <entry>disabled</entry>
        </row>
        <row>
            <entry>1</entry>
            <entry>enabled</entry>
        </row>
        <row>
            <entry>2</entry>
            <entry>enabled and longest-sprees per map are recorded</entry>
        </row>
    </tbody>
</tgroup>
</table>
</refsynopsisdiv>

<refsection>
<title>Default</title>
    <cmdsynopsis>
        <command>g_killingSpree</command>
        <arg choice="plain"><literal>0</literal></arg>
    </cmdsynopsis>
</refsection>

<refsection>
<title>Description</title>
<para>
    <command>g_killingSpree</command>
    sets the killing spree mode.
</para>
</refsection>

</refentry>
