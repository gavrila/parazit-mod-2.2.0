<refentry id="cvar.g_headshot">

<refmeta>
    <refentrytitle>g_headshot</refentrytitle>
    <manvolnum>cvar</manvolnum>
</refmeta>

<refnamediv>
    <refname>g_headshot</refname>
    <refpurpose>set bitflags for headshot beahvior</refpurpose>
</refnamediv>

<refsynopsisdiv>
    <cmdsynopsis>
        <command>g_headshot</command>
        <arg><replaceable>flags</replaceable></arg>
    </cmdsynopsis>

<table id="cvar.g_headshot.flags" frame="all">
<?dbfo table-width="40%"?>
<title>g_headshot Flags</title>
<tgroup cols="2" align="left" colsep="1" rowsep="1">
    <colspec colnum="1" colwidth="9*" align="center"/>
    <colspec colnum="2" colwidth="31*"/>
    <thead>
        <row>
            <entry>FLAG</entry>
            <entry>DESCRIPTION</entry>
        </row>
    </thead>
    <tbody>
        <row>
            <entry>1</entry>
            <entry>only headshots do damage</entry>
        </row>
        <row>
            <entry>2</entry>
            <entry>headshots do an instant kill</entry>
        </row>
    </tbody>
</tgroup>
</table>
</refsynopsisdiv>

<refsection>
<title>Default</title>
    <cmdsynopsis>
        <command>g_headshot</command>
        <arg choice="plain"><literal>0</literal></arg>
    </cmdsynopsis>
</refsection>

<refsection>
<title>Description</title>
<para>
    <command>g_headshot</command>
    sets bitflags for headshot behavior.
    A value of <literal>0</literal> disables this functionality.
</para>
</refsection>

</refentry>
