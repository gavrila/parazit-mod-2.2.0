<refentry id="cvar.g_password">

<refmeta>
    <refentrytitle>g_password</refentrytitle>
    <manvolnum>cvar</manvolnum>
</refmeta>

<refnamediv>
    <refname>g_password</refname>
    <refpurpose>set password for connecting clients</refpurpose>
</refnamediv>

<refsynopsisdiv>
    <cmdsynopsis>
        <command>g_password</command>
        <arg><replaceable>"secret"</replaceable></arg>
    </cmdsynopsis>
</refsynopsisdiv>

<refsection>
<title>Default</title>
    <cmdsynopsis>
        <command>g_password</command>
        <arg choice="plain"><literal>""</literal></arg>
    </cmdsynopsis>
</refsection>

<refsection>
<title>Description</title>
<para>
    <command>g_password</command>
    sets the password required for connecting clients.
    An empty value <literal>""</literal> specifies that users may connect without a password
    and is typical for public servers.
</para>
</refsection>

</refentry>
