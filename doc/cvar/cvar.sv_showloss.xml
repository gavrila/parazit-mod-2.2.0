<refentry id="cvar.sv_showloss">

<refmeta>
    <refentrytitle>sv_showloss</refentrytitle>
    <manvolnum>cvar</manvolnum>
</refmeta>

<refnamediv>
    <refname>sv_showloss</refname>
    <refpurpose>enable/disable lost usercmd logging</refpurpose>
</refnamediv>

<refsynopsisdiv>
    <cmdsynopsis>
        <command>sv_showloss</command>
        <arg><replaceable>mode</replaceable></arg>
    </cmdsynopsis>
    &boolean.mode;
</refsynopsisdiv>

<refsection>
<title>Default</title>
    <cmdsynopsis>
        <command>sv_showloss</command>
        <arg choice="plain"><literal>0</literal></arg>
    </cmdsynopsis>
</refsection>

<refsection>
<title>Description</title>
<para>
    <command>sv_showloss</command>
    enables or disables lost usercmd logging.
</para>
</refsection>

</refentry>
